      const { id } = req.params;
      await this.instructorService.deleteInstructor(parseInt(id));

      return res.send(successResponse(null, 'Instructor berhasil dihapus'));
    } catch (error) {
      console.error('Error:', error);
      return res.send(errorResponse('Internal server error', 500, error.message));
    }
  }

