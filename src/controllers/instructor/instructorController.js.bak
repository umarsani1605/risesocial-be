    try {
      const errors = validationResult(req);
      if (!errors.isEmpty()) {
        return res.send(errorResponse('Validation Error', 400, errors.array()));
      }

      const instructor = await this.instructorService.createInstructor(req.body);
      return res.status(201).send(successResponse(instructor, 'Instructor berhasil dibuat'));
    } catch (error) {
      console.error('Error:', error);
      return res.send(errorResponse('Internal server error', 500, error.message));
    }
  }

  /**
