    try {
      const errors = validationResult(req);
      if (!errors.isEmpty()) {
        return res.send(errorResponse('Validation Error', 400, errors.array()));
      }

      const { id } = req.params;
      const instructor = await this.instructorService.updateInstructor(parseInt(id), req.body);

      return res.send(successResponse(instructor, 'Instructor berhasil diupdate'));
    } catch (error) {
      console.error('Error:', error);
      return res.send(errorResponse('Internal server error', 500, error.message));
    }
  }

